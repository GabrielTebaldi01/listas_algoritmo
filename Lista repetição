#include<string.h>

int main(){
	
	int numero;
	int i;
	
	numero = 15;
	   
    printf("Os primeiros 5 numeros impares sao: ");
    
    
    for (i > 0; i <=numero; i++){
	
		if (i%3==0 && i > 0) 
		printf(" %d,  ", i);	
    }
     
return 0;
}



/*exercicio numero 5*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int i;
	int soma = 0;

    
    
    for (i = 0; i <= 50; i++){
	
		if (i%2==0) 
		soma = soma + i;	
    }
    
    printf("A soma dos primeiro 50 numeros eh: %d",soma);
     
return 0;
}



