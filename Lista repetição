/*exercicio numero 4*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int numero;
	int i;
	
	numero = 15;
	   
    printf("Os primeiros 5 numeros impares sao: ");
    
    
    for (i > 0; i <=numero; i++){
	
		if (i%3==0 && i > 0) 
		printf(" %d,  ", i);	
    }
     
return 0;
}



