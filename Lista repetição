/*exercicio numero 4*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int numero;
	int i;
	
	numero = 15;
	   
    printf("Os primeiros 5 numeros impares sao: ");
    
    
    for (i > 0; i <=numero; i++){
	
		if (i%3==0 && i > 0) 
		printf(" %d,  ", i);	
    }
     
return 0;
}



/*exercicio numero 5*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int i;
	int soma = 0;

    
    
    for (i = 0; i <= 50; i++){
	
		if (i%2==0) 
		soma = soma + i;	
    }
    
    printf("A soma dos primeiro 50 numeros eh: %d",soma);
     
return 0;
}



/*exercicio numero 6*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int i;
	
	printf ("O o programa terminara em:\n ");
	
	for(i = 10; i >= 0; i--){
		printf("%d\n", i);
		
	}
	
	printf("FIM");
	
	return 0;
}



/*exercicio numero 7*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int i, n;
	int soma = 0;
	
	for( i = 1; i<= 10; i++){
		printf("Digite um valor: ");
		scanf("%d", &n);
		
		soma = soma +n;
}
	
	
	printf("A soma eh: %d", soma);
	
	return 0;
}



/*exercicio numero 8*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int i, n, media;
	int soma = 0;
	
	for( i = 1; i<= 10; i++){
		printf("Digite um valor: ");
		scanf("%d", &n);
		
		soma = soma +n;
}
	
	media = soma/10;
	
	printf("Media: %d", media);
	
	return 0;
}



/*exercicio numero 9*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int i, n;
	int menor, maior;
	
	printf("Digite o 1o valor: ");
	scanf("%i", &n);
	
	menor = n;
	maior = n;
	
	for( i = 1; i < 10; i++){
		printf("Digite o %do valor:  ", i+1 );
		scanf("%i", &n);
		
		if(n > maior)
		maior = n;
	
		else 
		if (n < menor) 
		menor = n;
		
}
	
    printf("O menor numero eh: %d\n", menor);
    printf("O maior numero eh: %d", maior);
	
    return 0;
}



/*exercicio numero 10*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int i, n, media;
	int soma = 0;
	int positivos, negativos, nPositivos;
	
	
	for( i = 1; i<= 10; i++){
		printf("Digite valores positivo e negativos: ");
		scanf("%d", &n);
		
		if(n > 0)
		{
		nPositivos = i;	
		positivos = n;
		soma = soma + positivos;
		media = soma/nPositivos;
 	    }
		
		else
		negativos;
		
}
	
	printf("\nTotal de numeros positivos: %d", nPositivos);
	printf("\nMedia dos numeros positivos igual a: %d", media);
	
	
	return 0;
}



