/*exercicio numero 13*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>


int main (){
	
	int numero, n1,n2,n3;
	n1=0;
	n2=1;
	
	printf("Digite um numero para sequencia de fibonacci: ");
	scanf("%d", &numero);
	 printf ("0 - 1");
    while (n2<numero){
    	
    	n3 = n1 + n2;
    	printf(" - %d", n3);
    	n1 = n2;
    	n2 = n3;
    	
	}
	printf("\n");
	system ("pause");
	return 0;
}



/*exercicio numero 14*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>


int main(){
	
		int menor, maior;
		int numero;
		
		menor = numero;
	        maior = numero;
		
		do{
			
	    
			printf("Digite um valor: ");
	                scanf("%i", &numero);
	       
	        
	        if(numero > maior)
	 	    maior = numero;
	
		    else 
		    if (numero < menor) 
		    menor = numero;
	       
			
		}while (numero >= 0);
		
		printf("O menor numero eh: %d\n", menor);
        printf("O maior numero eh: %d", maior);
	
    return 0;
}



/*exercicio numero 15*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include<math.h>


int main(){
	
	int i;
	float numero ;
	float enesimo;
	
	
	
	printf("Digite um numero para saber o enesimo termo da sequencia harmonica: ");
	scanf("%f", &numero);
	
	enesimo = 0;
	
	for(i=1; i <=numero; i++){
		
		enesimo = enesimo + (1.0/i);
	}
	

	printf("\nO enesimo termo da sua sequencia harmonica eh: %.4f", enesimo);
    
	return 0;
}



/*exercicio numero 17*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>
#include<math.h>


int main(){
	int i, c, x;
	int numero;
	x=0;
	
	printf("Digite quantas linhas voce deseja no seu triangulo defloyd: ");
	scanf("%d", &numero);
	
	for(c =1; c <= numero; c++){
		for( i=1; i<=c; i++){
		   x++;	
		   printf("%d ", x);
		}
		
		printf("\n");
	
		
	}
}



/*exercicio numero 18*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>


int main(){
	int numero,i;
	
	printf ("Digite um numero maior do que 1: ");
	scanf("%d", &numero);
	
	if (numero == 2){
	printf("Numero %d eh primo!", numero);
    }
    
    while(numero < 1){
    	printf("Numero invalido, por favor digite um numero maior que 1: ");
    	scanf("%d", &numero);
	}
	
	for(i = 2; i < numero; i++){
		
		if(numero%i==0)
		printf ("Numero %d nao eh primo! ", numero);
		
		else
		printf("Numero %d eh primo!", numero);
		break;
	}
}



/*exercicio numero 19*/



#include<stdio.h>
#include<stdlib.h>
#include<string.h>


int main(){
	int numero,i;
	int a,p,m;
	int somaA = 0,somaP = 0,somaM = 0, somaTotal = 0;
	
	do{
		printf("\nSegue menu de frutas\n\n Maca = 1$ unidade\n Pera = 4$ unidade\n Abacaxi = 5$ unidade\n\n");
		
		printf("Se deseja comprar maca digite 1, para comprar pera digite 2, para comprar abacaxi digite 3 e caso nao queira comprar digite 0:  ");
		scanf("%d", &numero);
		
		if(numero == 1){
		printf("Quantas unidades deseja ?");
		scanf("%d", &m);
		
		somaM = somaM + m;
        }
		
		else if (numero == 2){
		printf("Quantas unidades deseja ?");
		scanf("%d", &p);
		
		somaP = somaP + p;
	   }
		
		else if(numero == 3){
		printf("Quantas unidades deseja ?");
		scanf("%d", &a);
		
		somaA = somaA + a;
	    }
	    
	    printf("\nQuantidade de frutas ate o momento: \n Maca = %d\n Pera = %d\n Abacaxi = %d\n", somaM, somaP, somaA);
	    
	    
	    
	}while(numero!=0);
	
	somaTotal = (somaA*5) + (somaP*4) + somaM;
	
	printf("\nO total a pagar eh: %d$", somaTotal);

}



