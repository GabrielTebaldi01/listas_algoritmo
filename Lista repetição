/*exercicio numero 9*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int i, n;
	int menor, maior;
	
	printf("Digite o 1o valor: ");
	scanf("%i", &n);
	
	menor = n;
	maior = n;
	
	for( i = 1; i < 10; i++){
		printf("Digite o %do valor:  ", i+1 );
		scanf("%i", &n);
		
		if(n > maior)
		maior = n;
	
		else 
		if (n < menor) 
		menor = n;
		
}
	
    printf("O menor numero eh: %d\n", menor);
    printf("O maior numero eh: %d", maior);
	
    return 0;
}



/*exercicio numero 10*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>

int main(){
	
	int i, n, media;
	int soma = 0;
	int positivos, negativos, nPositivos;
	
	
	for( i = 1; i<= 10; i++){
		printf("Digite valores positivo e negativos: ");
		scanf("%d", &n);
		
		if(n > 0)
		{
		nPositivos = i;	
		positivos = n;
		soma = soma + positivos;
		media = soma/nPositivos;
 	    }
		
		else
		negativos;
		
}
	
	printf("\nTotal de numeros positivos: %d", nPositivos);
	printf("\nMedia dos numeros positivos igual a: %d", media);
	
	
	return 0;
}



/*exercicio numero 11*/


#include<stdio.h>
#include<stdlib.h>
#include<string.h>


int main(){
	
	int numero, div;
	int i;
	int nada;
	
	printf("Digite um numero inteiro: ");
	scanf("%d", &numero);
	
	for (div = 1; div <= numero; div++){
		
		if(numero%div==0)
		printf("Pode ser dividido por: %d\n", div);
		
		else
		nada;
	}
	
	return 0;
}



